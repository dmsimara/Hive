<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hive Room Details</title>
    <link rel="stylesheet" href="ten-deets.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>

<body>
    <div class="dashboard-container">
        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="sidebar-card">
                <div class="logo">
                    <a href="index.html">
                        <img src="/images/hiveLight.png" alt="Hive Logo" class="logo-img">
                    </a>
                </div>
                <p class="menu-title">Menu</p>
                <nav class="menu">
                    <ul>
                        <li class="active">
                            <a href="/tenant/dashboard"><i class="fas fa-columns"></i> Dashboard</a>
                        </li>
                        <li>
                            <a href="/tenant/room-details"><i class="fas fa-door-open"></i> Room Details</a>
                        </li>
                    </ul>
                </nav>
                <p class="menu-title">Tracker</p>
                <div class="tracker">
                    <ul>
                        <li>
                            <a href="/tenant/utilities"><i class="fas fa-lightbulb"></i> Utilities and Bills</a>
                        </li>
                        <li>
                            <a href="/tenant/announcement"><i class="fas fa-bullhorn"></i> Announcement</a>
                        </li>
                    </ul>
                </div>

                <!-- Logout Button -->
                <div class="logout-container">
                    <a href="#" id="logoutButton" class="logout-button">
                        <i class="fas fa-sign-out-alt"></i> Log Out
                    </a>
                </div>
            </div>
        </aside>


        <!-- Main Content -->
        <main class="main-content">
            <header class="header">
                <div>
                    <h1>Room Details</h1>
                    <h2 class="header-subtitle">Welcome to Hive</h2>
                </div>
                <div class="header-right">
                    <input type="date" class="date-picker" value="2024-10-15">
                    <i class="fa fa-bell notification-icon"></i>
                </div>
            </header>

            <section class="room-overview">
                <div class="left-section">
                    <div class="tenants-section">
                        <h3 class="tenants-title"><i class="fas fa-users"></i> Tenants</h3>
                        <button class="edit-info-btn top-right">Edit Info</button>
                        <div class="tenant-cards">
                            <div class="tenant-card">
                                <i class="fas fa-star star-icon"></i>
                                <div class="tenant-avatar"></div>
                                <p>NAME<br>Surname</p>
                            </div>
                        </div>
                    </div>

                    <div class="tenant-info-wrapper">
                        <div class="tenants-info">
                            <h3><i class="fas fa-info-circle"></i> Tenants Info</h3>
                            <button class="edit-info-btn top-right">Edit Info</button>
                            <div class="tenant-info-cards">
                                <div class="tenant-info-card">
                                    <div class="avatar"></div>
                                    <div class="tenant-details">
                                        <p><strong>NAME SURNAME</strong></p>
                                        <p><strong>Tenant ID:</strong> 2024-12345</p>
                                        <p><strong>Contact Number:</strong> 0986 765 4321</p>
                                        <p><strong>Email:</strong> name.surname@gmail.com</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="right-section">
                    <div class="room-info">
                        <div class="room-number">
                            <div class="room-number-card">
                                <div class="circle">
                                    <h1>01</h1>
                                </div>
                                <p>Room No.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </main>
    </div>



    <!-- Modal for editing tenant info -->
    <div id="editModal" class="modal hidden">
        <div class="modal-content">
            <button class="close-modal">&times;</button>
            <form id="editForm">
                <h2>Edit Tenant Info</h2>
                <label for="tenantName">Name:</label>
                <input type="text" id="tenantName" name="tenantName" value="John Doe" />

                <label for="tenantContact">Contact:</label>
                <input type="text" id="tenantContact" name="tenantContact" value="0987654321" />

                <label for="tenantEmail">Email:</label>
                <input type="email" id="tenantEmail" name="tenantEmail" value="john.doe@example.com" />

                <input type="hidden" id="tenantId" name="tenantId" value="12345" />

                <button type="submit">Save Changes</button>
            </form>
        </div>
    </div>

    <script src="room-details.js"></script>
</body>

</html>

<script src="/js/ten-details.js"></script>