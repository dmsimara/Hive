<div class="dashboard-container">
    <!-- Sidebar -->
    <aside class="sidebar">
        <div class="sidebar-card">
            <div class="logo">
                <a href="index.html">
                    <img src="/images/hiveLight.png" alt="Hive Logo" class="logo-img">
                </a>
            </div>
            <p class="menu-title">Menu</p>
            <nav class="menu">
                <ul>
                    <li>
                        <a href="/tenant/dashboard"><i class="fas fa-columns"></i> Dashboard</a>
                    </li>
                    <li class="active">
                        <a href="/tenant/room-details"><i class="fas fa-door-open"></i> Room Details</a>
                    </li>
                </ul>
            </nav>
            <p class="menu-title">Tracker</p>
            <div class="tracker">
                <ul>
                    <li>
                        <a href="/tenant/utilities"><i class="fas fa-lightbulb"></i> Utilities and Bills</a>
                    </li>
                    <li>
                        <a href="/tenant/announcement"><i class="fas fa-bullhorn"></i> Announcement</a>
                    </li>
                </ul>
            </div>

            <!-- Logout Button -->
            <div class="logout-container">
                <a href="#" id="logoutButton" class="logout-button">
                    <i class="fas fa-sign-out-alt"></i> Log Out
                </a>
            </div>
        </div>
    </aside>

    <!-- Main Content -->
    <main class="main-content">
        <header class="header">
            <div>
                <!-- Add a new class to the Welcome header -->
                <h1 class="welcome-header">Welcome to Hive</h1>
                <!-- Add the class for custom styling -->
                <h2 class="header-subtitle room-details-header">Room Details</h2>
            </div>
            <div class="header-right">
                <input type="date" class="date-picker" value="2024-10-15">
                <i class="fa fa-bell notification-icon"></i>
            </div>
        </header>


        <section class="room-overview">
            <div class="left-section">
                <div class="tenants-section">
                    <div class="tenants-title-wrapper">
                        <h3 class="tenants-title"><i class="fas fa-users"></i> Tenants</h3>
                        <a href="/tenant/room-details/view/account" class="edit-info-link">
                            <button class="edit-info-btn top-right">Edit Info</button>
                        </a>
                    </div>
                    <div class="tenant-cards">
                        {{#each tenants}}
                        <div class="tenant-card tenants-template">
                            <i class="fas fa-star star-icon"></i>
                            <div class="tenant-avatar">
                                <img src="{{#if tenantProfile}}/images/upload/{{tenantProfile}}{{else}}/images/defaultUser.webp{{/if}}"
                                    alt="Tenant Profile" class="avatar-img" width="100px">
                            </div>
                            <p>{{tenantFirstName}} {{tenantLastName}}</p>
                        </div>
                        {{/each}}
                    </div>
                </div>

                <!-- Tenant Info Section -->
                <div class="tenant-info-wrapper">
                    <div class="tenants-info">
                        <h3><i class="fas fa-info-circle"></i> Tenants Info</h3>
                        <div class="tenant-info-cards">
                            {{#each tenants}}
                            <div class="tenant-info-card">
                                <div class="avatar">
                                    <img src="{{#if tenantProfile}}/images/upload/{{tenantProfile}}{{else}}/images/defaultUser.webp{{/if}}"
                                        alt="Tenant Profile">
                                </div>
                                <div class="tenant-details">
                                    <p><strong>{{tenantFirstName}} {{tenantLastName}}</strong></p>
                                    <p><strong>Tenant ID:</strong> {{tenant_id}}</p>
                                    <p><strong>Contact Number:</strong> {{mobileNum}}</p>
                                    <p><strong>Email:</strong> {{tenantEmail}}</p>
                                </div>
                            </div>
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Section -->
            <div class="right-section">
                <div class="room-info">
                    <div class="room-number">
                        <div class="room-number-card">
                            <!-- Circle Template for Room Number -->
                            <div class="circle">
                                <h1>{{roomNumber}}</h1> <!-- Display the room number inside the circle -->
                            </div>
                            <p>Room No.</p> <!-- Text outside the circle -->
                        </div>
                    </div>
                </div>
            </div>

        </section>
    </main>

