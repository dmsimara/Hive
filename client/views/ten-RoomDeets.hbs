<div class="dashboard-container">
    <aside class="sidebar">
        <div class="sidebar-card">
            <div class="d-flex">
                <div class="logo">
                    <a href="/tenant/dashboard">
                        <img src="/images/hiveLight.png" alt="Hive Logo" class="logo-img">
                    </a>
                </div>
            </div>
            <ul class="sidebar-nav">
                <p class="menu-title">Menu</p>
                <li class="sidebar-item">
                    <a href="/tenant/dashboard" class="sidebar-link">
                        <i class="fas fa-columns"></i>
                        <span>Dashboard</span>
                    </a>
                </li>
                <li class="sidebar-item active">
                    <a href="/tenant/room-details" class="sidebar-link">
                        <i class="fas fa-door-open"></i>
                        <span>Room Details</span>
                    </a>
                </li>
                <p class="menu-title tracker">Tracker</p>
                <li class="sidebar-item">
                    <a href="/tenant/utilities" class="sidebar-link">
                        <i class="fas fa-lightbulb"></i>
                        <span>Utilities and Bills</span>
                    </a>
                </li>
                <li class="sidebar-item">
                    <a href="/tenant/announcement" class="sidebar-link">
                        <i class="fas fa-bullhorn"></i>
                        <span>Announcement</span>
                    </a>
                </li>
            </ul>
            <div class="sidebar-footer">
                <a href="#" id="logoutButton" class="logout-button sidebar-link">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Logout</span>
                </a>
            </div>
        </div>
    </aside>

    <!-- Main Content -->
    <main class="main-content">
        <header class="header">
            <div>
                <h1 class="welcome-header">Welcome to Hive</h1>
                <h2 class="header-subtitle room-details-header">Room Details</h2>
            </div>
            <div class="header-right">
                <input type="date" class="date-picker" id="datePicker">
                <i class="fa fa-bell notification-icon"></i>
            </div>
        </header>


        <section class="room-overview">
            <div class="left-section">
                <div class="tenants-section">
                    <div class="tenants-title-wrapper">
                        <h3 class="tenants-title"><i class="fas fa-users"></i> Tenants</h3>
                        <a href="/tenant/room-details/view/account" class="edit-info-link">
                            <button class="edit-info-btn top-right">Edit Info</button>
                        </a>
                    </div>
                    <div class="tenant-cards">
                        {{#each tenants}}
                        <div class="tenant-card tenants-template">
                            <i class="fas fa-star star-icon"></i>
                            <div class="tenant-avatar">
                                <img src="{{#if tenantProfile}}/images/upload/{{tenantProfile}}{{else}}/images/defaultUser.webp{{/if}}"
                                    alt="Tenant Profile" class="avatar-img" width="100px">
                            </div>
                            <p>{{tenantFirstName}} {{tenantLastName}}</p>
                        </div>
                        {{/each}}
                    </div>
                </div>

                <!-- Tenant Info Section -->
                <div class="container">
                    <div class="tenant-info-wrapper">
                        <div class="tenants-info">
                            <h3><i class="fas fa-info-circle"></i> Tenants Info</h3>
                            <div class="tenant-info-cards">
                                {{#each tenants}}
                                <div class="tenant-info-card">
                                    <div class="avatar">
                                        <img src="{{#if tenantProfile}}/images/upload/{{tenantProfile}}{{else}}/images/defaultUser.webp{{/if}}"
                                            alt="Tenant Profile">
                                    </div>
                                    <div class="tenant-details">
                                        <p><strong>{{tenantFirstName}} {{tenantLastName}}</strong></p>
                                        <p><strong>Tenant ID:</strong> {{tenant_id}}</p>
                                        <p><strong>Contact Number:</strong> {{mobileNum}}</p>
                                        <p><strong>Email:</strong> {{tenantEmail}}</p>
                                    </div>
                                </div>
                                {{/each}}
                            </div>
                        </div>
                    </div>
                    <div class="penalty-wrapper">
                        <i class="material-icons">verified_user</i>
                        <p class="penalty-title">Penalty:</p>
                        <div class="penalty-container"></div>
                        <p class="penalty-title">Keycard Code:</p>
                        <div class="keycard-container"></div>
                    </div>
                </div>

            </div>

            <!-- Right Section -->
            <div class="right-section">
                <div class="room-info">
                    <div class="room-number">
                        <div class="room-number-card">
                            <div class="circle">
                                <h1>{{roomNumber}}</h1>
                                <p>Room No.</p>
                            </div>
                            <div class="room-status-wrapper">
                                <i class="fa-solid fa-bed"></i>
                                <div class="room-status-text">
                                    <p><strong>Room Status:</strong></p>
                                    <p>Occupied</p>
                                </div>
                            </div>
                            <div class="first-row">
                                <div class="row-container">
                                    <i class="fa-solid fa-door-open"></i>
                                    <div class="row-text">
                                        <p class="row-text-title"><strong>Room Type:</strong></p>
                                        <p>{{roomType}}</p>
                                    </div>
                                </div>
                                <div class="row-container">
                                    <i class="material-icons">open_in_new</i>
                                    <div class="row-text">
                                        <p class="row-text-title"><strong>Floor No:</strong></p>
                                        <p>{{floorNumber}}</p>
                                    </div>
                                </div>
                            </div>
                            <div class="second-row">
                                <div class="row-container">
                                    <i class="material-icons">group</i>
                                    <div class="row-text">
                                        <p class="row-text-title"><strong>Capacity:</strong></p>
                                        <p>{{roomTotalSlot}}</p>
                                    </div>
                                </div>
                                <div class="row-container">
                                    <i class="fa-solid fa-bed"></i>
                                    <div class="row-text">
                                        <p class="row-text-title"><strong>Furniture:</strong></p>
                                        <p>Bunk Bed, Desk</p>
                                    </div>
                                </div>
                            </div>
                            <div class="third-row">
                                <div class="row-container">
                                    <i class="material-icons">alt_route</i>
                                    <div class="row-text">
                                        <p class="row-text-title"><strong>Room Size:</strong></p>
                                        <p>25 sqm</p>
                                    </div>
                                </div>
                                <div class="row-container">
                                    <i class="material-icons">kitchen</i>
                                    <div class="row-text">
                                        <p class="row-text-title"><strong>Amenities:</strong></p>
                                        <p>Kitchen, Laundry</p>
                                    </div>
                                </div>
                            </div>
                            <div class="end-row"></div>
                        </div>
                    </div>
                </div>
            </div>




        </section>
    </main>
</div>
<script src="/js/ten-details.js"></script>