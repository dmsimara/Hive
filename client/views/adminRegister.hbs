<div class="container-fluid vh-100">
    <div class="row h-100">
        <!-- Left Side: Logo Container -->
        <div class="col-3 logo-container d-flex justify-content-center align-items-center">
            <img src="/images/icon1.png" alt="Logo" class="logo"> 
        </div>

        <!-- Middle Side: Form Container  -->
        <div class="col-6 form-container d-flex justify-content-center align-items-center">
            <div class="content">
                <h2 class="intro">Get <strong>Started!</strong></h2>
                <p class="desc">
                    New here? Register now to manage your room, payments, <br/> and stay informed about important updates
                </p>
            </div>
            <form action="/api/auth/adminRegister" method="POST" style="width: 80%;">
                <div class="mb-3">
                    <div class="row">
                        <div class="col">
                            <label for="adminFirstName" class="form-label">First Name</label>
                            <input type="text" class="form-control" id="adminFirstName" name="adminFirstName" required>
                        </div>
                        <div class="col">
                            <label for="adminLastName" class="form-label">Last Name</label>
                            <input type="text" class="form-control" id="adminLastName" name="adminLastName" required>
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="adminEmail" class="form-label">Email</label>
                    <input type="email" class="form-control" id="adminEmail" name="adminEmail" required>
                </div>
                <div class="mb-3">
                    <div class="row">
                        <div class="col">
                            <label for="adminPassword" class="form-label">Password</label>
                            <input type="password" class="form-control" id="adminPassword" name="adminPassword"
                                required>
                        </div>
                        <div class="col">
                            <label for="adminConfirmPassword" class="form-label">Confirm Password</label>
                            <input type="password" class="form-control" id="adminConfirmPassword"
                                name="adminConfirmPassword" required>
                            <div id="passwordError" class="text-danger" style="display:none;">Passwords do not match.
                            </div>
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="eName" class="form-label">Establishment Name</label>
                    <input type="text" class="form-control" id="eName" name="eName" required>
                </div>
                <button type="submit" class="btn btn-primary">Sign Up!</button>
            </form>
            <p class="create">Already Have an Account? <a href="/admin/login">Log In</a></p>
        </div>

        <!-- Right Side: Side Container -->
        <div class="col-3 side-container">
        </div>
    </div>
</div>

<script src="/js/adminRegister.js"></script>