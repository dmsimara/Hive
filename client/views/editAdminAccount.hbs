<div class="container pt-5 pb-5">
  <h3><i class="material-icons dots">more_horiz</i>Edit Profile</h3>
  <div class="card">
    <div class="card__left">
      {{#if admin.adminProfile}}
      <img class="card__profile" src="/images/upload/{{admin.adminProfile}}" alt="{{admin.adminFirstName}}'s Profile"
        id="profileImage">
      {{else}}
      <img class="card__profile" src="/images/defaultUser.webp" alt="Default Profile" id="profileImage">
      {{/if}}
    </div>

    <div class="card__right">
      <form id="updateAdminForm" action="/admin/dashboard/edit/account" method="POST" enctype="multipart/form-data">
        <div class="mb-3">
          <div class="row">
            <div class="col-12 col-md-6">
              <label for="adminFirstName" class="form-label">First Name</label>
              <input type="text" class="form-control" id="adminFirstName" name="adminFirstName"
                value="{{admin.adminFirstName}}" placeholder="{{admin.adminFirstName}}" required>
            </div>
            <div class="col-12 col-md-6">
              <label for="adminLastName" class="form-label">Last Name</label>
              <input type="text" class="form-control" id="adminLastName" name="adminLastName"
                value="{{admin.adminLastName}}" placeholder="{{admin.adminLastName}}" required>
            </div>
          </div>
        </div>
        <div class="mb-3">
          <label for="adminEmail" class="form-label">Email</label>
          <input type="email" class="form-control" id="adminEmail" name="adminEmail" value="{{admin.adminEmail}}"
            placeholder="{{admin.adminEmail}}" required>
        </div>
        <div>
          <input type="file" name="sampleFile" accept="image/*" class="upload-input" id="fileInput"
            style="display: none;" />
          <input type="hidden" name="admin_id" value="{{admin.admin_id}}" />
          <div class="button-group">
            <a class="cancel" type="button">Cancel</a>
            <input type="submit" class="btn btn-primary" value="Save" />
          </div>
      </form>
    </div>
  </div>
</div>

