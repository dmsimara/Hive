<div class="container pt-5 pb-5">
  <div class="col-6">
    <h1>Unit Management</h1>
  </div>
  <div class="row align-items-center">
    <div class="col-6">
      <h3>Occupied Units: {{occupiedUnits}}</h3>
    </div>
    <div class="col-6 d-flex justify-content-end gap-2">
      <form class="d-flex" role="search" method="POST" action="/admin/manage/unit" novalidate>
        <input class="form-control me-2" type="search" placeholder="Search" name="searchUnits" aria-label="Search"
          required value="{{lastSearchTerm}}">
        <button class="btn btn-outline-success" type="submit">Search</button>
      </form>
      <a href="/admin/manage/unit/add" type="button" class="btn btn-primary align-self-center">+ Add Room</a>
    </div>
  </div>

    <table class="table table-bordered">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Floor Number</th>
                <th scope="col">Room Number</th>
                <th scope="col">Room Type</th> 
                <th scope="col">Room Total Slot</th>
                <th scope="col">Remaining Slot</th>
                <th scope="col" class="text-end">Action</th>
            </tr>
        </thead>
        <tbody>
            {{#if units.length}}
                {{#each units}}
                    <tr>
                      <th scope="row">{{this.room_id}}</th>
                      <td>{{this.floorNumber}}</td>
                      <td>{{this.roomNumber}}</td>
                      <td>{{this.roomType}}</td>
                      <td>{{this.roomTotalSlot}}</td>
                      <td>{{this.roomRemainingSlot}}</td>
                      <td class="text-end">
                        <a href="#" data-bs-toggle="modal" data-bs-target="#manageUnitModal" type="button" class="btn btn-light btn-small">Manage</a>
                        <a href="#" type="button" onclick="deleteUnit('{{this.room_id}}')" class="btn btn-light btn-small"><i
                            class="material-icons">person_remove</i>Delete</a>
                      </td>
                    </tr>
                {{/each}}
            {{else}}
                <tr>
                    <td colspan="7" class="text-center">No rooms found</td>
                </tr>
            {{/if}} 
        </tbody>
    </table>
</div>

<!-- Modal -->

<div class="modal fade" id="manageUnitModal" tabindex="-1" aria-labelledby="manageUnitModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-xl">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="manageUnitModalLabel">Tenant List</h5>
        <p>Total Slot: </p>
        <p>Rented: </p>
        <p>Remaining: </p>
        <div class="col-6 d-flex justify-content-end gap-2">
          <form class="d-flex" role="search" method="POST" action="/admin/manage/unit" novalidate>
            <input class="form-control me-2" type="search" placeholder="Search" name="searchUnits" aria-label="Search"
              required value="{{lastSearchTerm}}">
            <button class="btn btn-outline-success" type="submit">Search</button>
          </form>
        </div>
      </div>
      <div class="modal-body">
        <table class="table table-bordered">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Tenant ID#</th>
                <th scope="col">Tenant Name</th>
                <th scope="col">Rent From</th>
                <th scope="col">Rent Until</th> 
                <th scope="col">Period Remaining</th>
                <th scope="col" class="text-end">Action</th>
            </tr>
        </thead>
        <tbody>
            {{#if units.length}}
                {{#each units}}
                    <tr>
                      <th scope="row">{{this.room_id}}</th>
                      <td>{{this.floorNumber}}</td>
                      <td>{{this.roomNumber}}</td>
                      <td>{{this.roomType}}</td>
                      <td>{{this.roomTotalSlot}}</td>
                      <td class="text-end">
                        <a href="#" type="button" onclick="deleteUnit('{{this.room_id}}')" class="btn btn-light btn-small">Check Out</a>
                      </td>
                    </tr>
                {{/each}}
            {{else}}
                <tr>
                    <td colspan="7" class="text-center">No tenants assigned</td>
                </tr>
            {{/if}} 
        </tbody>
    </table>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<script src="/js/manageUnits.js"></script>
