<div class="dashboard-container">
    <aside class="sidebar">
        <div class="sidebar-card">
            <div class="d-flex">
                <div class="logo">
                    <a href="/tenant/dashboard">
                        <img src="/images/hiveLight.png" id="logo" alt="Hive Logo" class="logo-img">
                    </a>
                </div>
            </div>
            <ul class="sidebar-nav">
                <p class="menu-title">Menu</p>
                <li class="sidebar-item">
                    <a href="/tenant/dashboard" class="sidebar-link">
                        <i class="fas fa-columns"></i>
                        <span>Dashboard</span>
                    </a>
                </li>
                <li class="sidebar-item">
                    <a href="/tenant/room-details" class="sidebar-link">
                        <i class="fas fa-door-open"></i>
                        <span>Room Details</span>
                    </a>
                </li>
                <p class="menu-title tracker">Tracker</p>
                <li class="sidebar-item">
                    <a href="/tenant/utilities" class="sidebar-link">
                        <i class="fas fa-lightbulb"></i>
                        <span>Utilities and Bills</span>
                    </a>
                </li>
                <li class="sidebar-item active">
                    <a href="/tenant/announcement" class="sidebar-link">
                        <i class="fas fa-bullhorn"></i>
                        <span>Announcement</span>
                    </a>
                </li>
                <li class="sidebar-item active">
                    <a href="/tenant/settings" class="sidebar-link">
                        <i class="fa-solid fa-gear"></i>
                        <span>Settings</span>
                    </a>
                </li>
            </ul>
            <div class="sidebar-footer">
                <a href="#" id="logoutButton" class="logout-button sidebar-link">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Logout</span>
                </a>
            </div>
        </div>
    </aside>

    <!-- Main Content Section -->
    <main class="main-content">
        <header class="dashboard-header">
            <div class="header-left">
                <h3>Welcome to Hive</h3>
                <h1 class="dashboard-title">Announcements</h1> <!-- Bold styling added -->
            </div>
            <div class="header-right">
                <input type="date" class="date-picker" id="datePicker">
                <i class="fa fa-bell notification-icon"></i>
            </div>
        </header>

        <div class="main-content">
            <nav class="filter-nav">
                <a href="#" id="all-notices-btn" class="filter-link active">All</a>
                <a href="#" id="pinned-notices-btn" class="filter-link">Pinned</a>
                <a href="#" id="permanent-notices-btn" class="filter-link">Permanent</a>
            </nav>
            <div id="notices-container" class="notices-list">
                {{#if notices.length}}
                {{#each notices}}
                <div class="notice-item {{#if pinned}}pinned{{/if}} {{#if permanent}}permanent{{/if}}"
                    data-id="{{notice_id}}" data-pinned="{{pinned}}" data-permanent="{{permanent}}">
                    <h2 class="notice-title">{{title}}</h2>
                    <p class="notice-content">{{content}}</p>
                    <span class="notice-meta">
                        {{#if pinned}}<span class="badge pinned-badge">Pinned</span>{{/if}}
                        {{#if permanent}}<span class="badge permanent-badge">Permanent</span>{{/if}}
                        <span class="notice-date">{{updated_at}}</span>
                    </span>
                </div>
                {{/each}}
                {{else}}
                <p>No notices available at the moment.</p>
                {{/if}}
            </div>
        </div>
    </main>
</div>
<script src="/js/ten-announce.js"></script>
<script>
    window.onload = function() {
    const theme = localStorage.getItem('theme');

    const logo = document.getElementById('logo');

    if (theme === 'dark') {
        logo.src = '/images/hiveDark.png';
    } else {
        logo.src = '/images/hiveLight.png';
    }
};
</script>