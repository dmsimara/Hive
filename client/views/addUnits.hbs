      <label for="floorNumber" class="form-label">Floor Number</label>
      <input type="number" class="form-control" id="floorNumber" name="floorNumber" required>
      <div class="invalid-feedback">Please enter a floor number.</div>
    </div>
    
    <div class="col-md-6">
      <label for="roomNumber" class="form-label">Room Number</label>
      <input type="number" class="form-control" id="roomNumber" name="roomNumber" required>
      <div class="invalid-feedback">Please enter a room number.</div>
    </div>
    
    <div class="col-md-6">
      <label for="roomType" class="form-label">Room Type</label>
      <input type="text" class="form-control" id="roomType" name="roomType" required>
      <div class="invalid-feedback">Please enter a room type.</div>
    </div>
    
    <div class="col-md-6">
      <label for="roomTotalSlot" class="form-label">Total Slots</label>
      <input type="number" class="form-control" id="roomTotalSlot" name="roomTotalSlot" required>
      <div class="invalid-feedback">Please enter the total slots available.</div>
    </div>

    <div class="d-flex justify-content-end mt-3">
      <button type="button" id="closeButton" class="btn btn-secondary btn-sm me-2">Close</button>
