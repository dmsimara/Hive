  <div id="alertMessage" class="alert" style="display: none;"></div>

  <form action="/api/auth/addUnit" class="row g-3 needs-validation" method="POST" id="addForm">
    <input type="hidden" name="establishmentId" value="{{establishmentId}}">
    
