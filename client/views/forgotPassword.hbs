<div class="container-fluid vh-100">
    <div class="forgot-container">
        <div class="main-container">
            <div class="body">
                <h1>Forgot Password</h1>
                <p>Enter your email address and we'll send you a link to <br> reset your password.</p>

                <form action="/api/auth/forgot-password" method="POST" id="resetForm">
                    <input type="email" class="form-control" id="adminEmail" name="adminEmail" required>
                    <i class="fa-regular fa-envelope"></i>

                    <button type="submit" class="btn btn-primary">Send Reset Link</button>
                </form>
            </div>
            <div class="footer">
                <a href="/admin/login" class="back-to-login">
                    <i class="fa-solid fa-arrow-left"></i> Back to Login
                </a>
            </div>
        </div>
    </div>
</div>

<script src="/js/forgotPassword.js"></script>
<script>
    window.onload = function () {
        const theme = localStorage.getItem('theme');

        const logo = document.getElementById('logo');

        if (theme === 'dark') {
            logo.src = '/images/hiveDark.png';
        } else {
            logo.src = '/images/hiveLight.png';
        }
    };
</script>