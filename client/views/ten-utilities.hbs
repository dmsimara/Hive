<div class="container">
  <aside class="sidebar">
    <div class="sidebar-card">
        <!-- Logo Section -->
        <div class="logo">
            <a href="index.html">
                <img src="/images/hiveLight.png" alt="Hive Logo" class="logo-img">
            </a>
        </div>

        <!-- Menu Section -->
        <p class="menu-title">Menu</p>
        <nav class="menu">
            <ul>
                <li class="active">
                    <a href="/tenant/dashboard"><i class="fas fa-columns"></i> Dashboard</a>
                </li>
                <li>
                    <a href="/tenant/room-details"><i class="fas fa-door-open"></i> Room Details</a>
                </li>
            </ul>
        </nav>

        <!-- Tracker Section -->
        <p class="menu-title">Tracker</p>
        <div class="tracker">
            <ul>
                <li>
                  <li class="active"> 
                    <a href="/tenant/utilities"><i class="fas fa-lightbulb"></i> Utilities and Bills</a>
                </li>
                <li>
                    <a href="/tenant/announcement"><i class="fas fa-bullhorn"></i> Announcement</a>
                </li>
            </ul>
        </div>

        <!-- Logout Button in Sidebar -->
        <div class="logout-container">
            <a href="#" id="logoutButton" class="logout-button">
                <i class="fas fa-sign-out-alt"></i> Log Out
            </a>
        </div>
    </div>
  </aside>

  <!-- Main Content -->
  <main>
   <header class="dashboard-header">
    <div class="header-left">
        <h3 class="welcome-text">Welcome to Hive</h3>
        <h1 class="dashboard-title">Utilities and Bills</h1>
    </div>
    <div class="header-right">
        <input type="date" class="date-picker" value="2024-10-15">
        <i class="fa fa-bell notification-icon"></i>
    </div>
</header>

    <div class="main-content">
      <!-- Monthly Utilities Bills and Room Total Balance -->
      <div class="row">
        <!-- Monthly Utilities Bills -->
        <section class="utilities-section">
          <div class="utilities-header">
            <h2>Monthly Utilities Bills</h2>
            <div class="controls">
              <i class="fas fa-download"></i>
            </div>
          </div>
          <div class="bills">
            <div class="bill">
              <p>Unit Rental</p>
              <p>Php 8,000</p>
            </div>
            <div class="bill">
              <p>Electricity Consumption</p>
              <p>Php 2,345.67</p>
            </div>
            <div class="bill">
              <p>Water Usage</p>
              <p>Php 345.67</p>
            </div>
            <div class="bill">
              <p>Internet Connection</p>
              <p>Php 1,499</p>
            </div>
            <div class="bill">
              <p>Maintenance Fees</p>
              <p>Php 600</p>
            </div>
          </div>
        </section>

        <!-- Room Total Balance -->
        <aside class="balance-section">
          <div class="total-balance">
            <h2>Room #{{roomNumber}} Total Balance</h2>
            <p>Php 12,479.34</p>
            <small>Shared Balance: Php 3,119.84</small>
          </div>
          <div class="usage-summary">
            <h3>Usage Summary</h3>
            <p>Internet: 50 Mbps</p>
            <p>Electricity: 345 kWh</p>
            <p>Water: 25 mÂ³</p>
          </div>
        </aside>
      </div>
    </div>

    <!-- Utilities History -->
    <section class="utilities-history">
      <h2>Utilities History</h2>
      <table>
        <thead>
          <tr>
            <th>Month</th>
            <th>Total Balance</th>
            <th>Shared Balance</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>Aug 2024 - Sept 2024</td>
            <td>Php 13,178.89</td>
            <td>Php 3,294.73</td>
          </tr>
          <tr>
            <td>July 2024 - Aug 2024</td>
            <td>Php 12,592.12</td>
            <td>Php 3,148.03</td>
          </tr>
        </tbody>
      </table>
    </section>
  </main>
</div>

