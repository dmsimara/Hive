<div class="dashboard-container">
  <aside class="sidebar">
    <div class="sidebar-card">
      <div class="d-flex">
        <div class="logo">
          <a href="/tenant/dashboard">
            <img src="/images/hiveLight.png" alt="Hive Logo" class="logo-img">
          </a>
        </div>
      </div>
      <ul class="sidebar-nav">
        <p class="menu-title">Menu</p>
        <li class="sidebar-item">
          <a href="/tenant/dashboard" class="sidebar-link">
            <i class="fas fa-columns"></i>
            <span>Dashboard</span>
          </a>
        </li>
        <li class="sidebar-item">
          <a href="/tenant/room-details" class="sidebar-link">
            <i class="fas fa-door-open"></i>
            <span>Room Details</span>
          </a>
        </li>
        <p class="menu-title tracker">Tracker</p>
        <li class="sidebar-item active">
          <a href="/tenant/utilities" class="sidebar-link">
            <i class="fas fa-lightbulb"></i>
            <span>Utilities and Bills</span>
          </a>
        </li>
        <li class="sidebar-item">
          <a href="/tenant/announcement" class="sidebar-link">
            <i class="fas fa-bullhorn"></i>
            <span>Announcement</span>
          </a>
        </li>
      </ul>
      <div class="sidebar-footer">
        <a href="#" id="logoutButton" class="logout-button sidebar-link">
          <i class="fas fa-sign-out-alt"></i>
          <span>Logout</span>
        </a>
      </div>
    </div>
  </aside>


  <!-- Main Content -->
  <main>
    <header class="dashboard-header">
      <div class="header-left">
        <h3 class="welcome-text">Welcome to Hive</h3>
        <h1 class="dashboard-title">Utilities and Bills</h1>
      </div>
      <div class="header-right">
        <input type="date" class="date-picker" id="datePicker">
        <i class="fa fa-bell notification-icon"></i>
      </div>
    </header>


    <div class="main-content">
      <!-- Monthly Utilities Bills and Room Total Balance -->
      <div class="row">
        <!-- Monthly Utilities Bills -->
        <section class="utilities-section">
          <div class="utilities-header">
            <h2>Monthly Utilities Bills</h2>
            <div class="controls">
              <i class="fas fa-download"></i>
            </div>
          </div>
          <div class="bills">
            {{#each utilities}}
            <div class="bill">
              <i class="{{this.iconClass}}"></i>
              <p class="bill-title">{{this.utilityType}}</p>
              <div class="bill-dates">
                <p><strong>Statement Date:</strong> {{this.statementDate}}</p>
                <p><strong>Due Date:</strong> {{this.dueDate}}</p>
              </div>
              <p class="bill-amount">Php {{this.charge}}</p>
              <p class="bill-tenant-share">Php {{this.perTenant}} per tenant</p>
            </div>
            {{/each}}
          </div>
        </section>



        <!-- Right Side Cards -->
        <aside class="right-side">
          <!-- Room Total Balance -->
          <div class="total-balance-card">
            <h2>Room #01 Total Balance</h2>
            <p class="main-balance">Php 12,479.34</p>
            <div class="shared-balance-card">
              <h3>Shared Balance</h3>
              <p>Php 3,119.84</p>
              <!-- Paid Indicator -->
              <span class="paid-indicator paid">Paid</span>
            </div>
          </div>


          <!-- Usage Summary -->
          <div class="usage-summary-card">
            <h3>Usage Summary</h3>
            <div class="usage-circle">
              <p>50 Mbps</p>
            </div>
            <p>Your Subscription is Internet Only</p>
          </div>
        </aside>
      </div>


      <section class="utilities-history">
        <h2>Utilities History</h2>
        <div class="utilities-history-card">
          <table>
            <thead>
              <tr>
                <th>Month</th>
                <th><i class="fas fa-wallet"></i> Total Balance</th>
                <th><i class="fas fa-users"></i> Shared Balance</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>Aug 2024 - Sept 2024</td>
                <td>Php 13,178.89</td>
                <td>Php 3,294.73</td>
              </tr>
              <tr>
                <td>July 2024 - Aug 2024</td>
                <td>Php 12,592.12</td>
                <td>Php 3,148.03</td>
              </tr>
            </tbody>
          </table>
        </div>
      </section>


      <script src="/js/ten-utilities.js"></script>