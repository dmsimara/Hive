<div class="dashboard-container">
    <aside class="sidebar">
        <div class="sidebar-card">
            <div class="d-flex">
                <div class="logo">
                    <a href="/tenant/dashboard">
                        <img src="/images/hiveLight.png" alt="Hive Logo" class="logo-img">
                    </a>
                </div>
            </div>
            <ul class="sidebar-nav">
                <p class="menu-title">Menu</p>
                <li class="sidebar-item">
                    <a href="/tenant/dashboard" class="sidebar-link">
                        <i class="fas fa-columns"></i>
                        <span>Dashboard</span>
                    </a>
                </li>
                <li class="sidebar-item active">
                    <a href="/tenant/room-details" class="sidebar-link">
                        <i class="fas fa-door-open"></i>
                        <span>Room Details</span>
                    </a>
                </li>
                <p class="menu-title tracker">Tracker</p>
                <li class="sidebar-item">
                    <a href="/tenant/utilities" class="sidebar-link">
                        <i class="fas fa-lightbulb"></i>
                        <span>Utilities and Bills</span>
                    </a>
                </li>
                <li class="sidebar-item">
                    <a href="/tenant/announcement" class="sidebar-link">
                        <i class="fas fa-bullhorn"></i>
                        <span>Announcement</span>
                    </a>
                </li>
            </ul>
            <div class="sidebar-footer">
                <a href="#" id="logoutButton" class="logout-button sidebar-link">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Logout</span>
                </a>
            </div>
        </div>
    </aside>

    <!-- Main Content -->
    <div class="main-content">
        <header class="section-header">
            <h3 class="title-profile">
                <i class="material-icons dots">more_horiz</i> Tenant Profile
            </h3>
        </header>

        <section class="card">
            <div class="card__content">
                {{#each tenant}}
                <!-- Profile Image Section -->
                <div class="card__profile">
                    <img src="{{#if tenantProfile}}/images/upload/{{tenantProfile}}{{else}}/images/defaultUser.webp{{/if}}"
                        alt="Tenant Profile Picture" width="80px">
                </div>

                <!-- Tenant Details -->
                <div class="card__details">
                    <!-- Row for Name and Email -->
                    <div class="card__row">
                        <div class="card__section">
                            <h1>Name:</h1>
                            <span>{{tenantFirstName}} {{tenantLastName}}</span>
                        </div>
                        <div class="card__section">
                            <h1>Email:</h1>
                            <span>{{tenantEmail}}</span>
                        </div>
                    </div>

                    <!-- Row for Gender and Mobile Number -->
                    <div class="card__row">
                        <div class="card__section">
                            <h1>Gender:</h1>
                            <span>{{gender}}</span>
                        </div>
                        <div class="card__section">
                            <h1>Mobile Number:</h1>
                            <span>{{mobileNum}}</span>
                        </div>
                    </div>

                    <!-- Row for Guardian Name and Guardian Mobile Number -->
                    <div class="card__row">
                        <div class="card__section">
                            <h1>Guardian Name:</h1>
                            <span>{{tenantGuardianName}}</span>
                        </div>
                        <div class="card__section">
                            <h1>Guardian Number:</h1>
                            <span>{{tenantGuardianNum}}</span>
                        </div>
                    </div>

                    <!-- Edit Profile Button -->
                    <a href="/tenant/room-details/edit/account" class="btn btn--edit-profile">
                        <i class="material-icons">edit</i> Edit Profile
                    </a>
                </div>
                {{/each}}
            </div>
        </section>
    </div>
</div>
