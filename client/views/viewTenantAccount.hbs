<div class="dashboard-container">
    <!-- Sidebar -->
    <aside class="sidebar">
        <div class="sidebar-card">
            <div class="logo">
                <a href="index.html">
                    <img src="/images/hiveLight.png" alt="Hive Logo" class="logo-img">
                </a>
            </div>
            <p class="menu-title">Menu</p>
            <nav class="menu">
                <ul>
                    <li>
                        <a href="/tenant/dashboard"><i class="fas fa-columns"></i> Dashboard</a>
                    </li>
                    <li class="active">
                        <a href="/tenant/room-details"><i class="fas fa-door-open"></i> Room Details</a>
                    </li>
                </ul>
            </nav>
            <p class="menu-title">Tracker</p>
            <div class="tracker">
                <ul>
                    <li>
                        <a href="/tenant/utilities"><i class="fas fa-lightbulb"></i> Utilities and Bills</a>
                    </li>
                    <li>
                        <a href="/tenant/announcement"><i class="fas fa-bullhorn"></i> Announcement</a>
                    </li>
                </ul>
            </div>

            <!-- Logout Button -->
            <div class="logout-container">
                <a href="#" id="logoutButton" class="logout-button">
                    <i class="fas fa-sign-out-alt"></i> Log Out
                </a>
            </div>
        </div>
    </aside>

    <!-- Main Content -->
    <div class="main-content">
        <header class="section-header">
            <h3 class="title-profile">
                <i class="material-icons dots">more_horiz</i> Tenant Profile
            </h3>
        </header>

        <section class="card">
            <div class="card__content">
                {{#each tenant}}
                <!-- Profile Image Section -->
                <div class="card__profile">
                    <img src="{{#if tenantProfile}}/images/upload/{{tenantProfile}}{{else}}/images/defaultUser.webp{{/if}}"
                        alt="Tenant Profile Picture" width="80px">
                </div>

                <!-- Tenant Details -->
                <div class="card__details">
                    <!-- Row for Name and Email -->
                    <div class="card__row">
                        <div class="card__section">
                            <h1>Name:</h1>
                            <span>{{tenantFirstName}} {{tenantLastName}}</span>
                        </div>
                        <div class="card__section">
                            <h1>Email:</h1>
                            <span>{{tenantEmail}}</span>
                        </div>
                    </div>

                    <!-- Row for Gender and Mobile Number -->
                    <div class="card__row">
                        <div class="card__section">
                            <h1>Gender:</h1>
                            <span>{{gender}}</span>
                        </div>
                        <div class="card__section">
                            <h1>Mobile Number:</h1>
                            <span>{{mobileNum}}</span>
                        </div>
                    </div>

                    <!-- Row for Guardian Name and Guardian Mobile Number -->
                    <div class="card__row">
                        <div class="card__section">
                            <h1>Guardian Name:</h1>
                            <span>{{tenantGuardianName}}</span>
                        </div>
                        <div class="card__section">
                            <h1>Guardian Number:</h1>
                            <span>{{tenantGuardianNum}}</span>
                        </div>
                    </div>

                    <!-- Edit Profile Button -->
                    <a href="/tenant/room-details/edit/account" class="btn btn--edit-profile">
                        <i class="material-icons">edit</i> Edit Profile
                    </a>
                </div>
                {{/each}}
            </div>
        </section>
    </div>
</div>
