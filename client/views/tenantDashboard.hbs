<div class="dashboard-container">
    <aside class="sidebar">
        <div class="sidebar-card">
            <div class="d-flex">
                <div class="logo">
                    <a href="/tenant/dashboard">
                        <img src="/images/hiveLight.png" alt="Hive Logo" class="logo-img">
                    </a>
                </div>
            </div>
            <ul class="sidebar-nav">
                <p class="menu-title">Menu</p>
                <li class="sidebar-item active">
                    <a href="/tenant/dashboard" class="sidebar-link">
                        <i class="fas fa-columns"></i>
                        <span>Dashboard</span>
                    </a>
                </li>
                <li class="sidebar-item">
                    <a href="/tenant/room-details" class="sidebar-link">
                        <i class="fas fa-door-open"></i>
                        <span>Room Details</span>
                    </a>
                </li>
                <p class="menu-title tracker">Tracker</p>
                <li class="sidebar-item">
                    <a href="/tenant/utilities" class="sidebar-link">
                        <i class="fas fa-lightbulb"></i>
                        <span>Utilities and Bills</span>
                    </a>
                </li>
                <li class="sidebar-item">
                    <a href="/tenant/announcement" class="sidebar-link">
                        <i class="fas fa-bullhorn"></i>
                        <span>Announcement</span>
                    </a>
                </li>
            </ul>
            <div class="sidebar-footer">
                <a href="#" id="logoutButton" class="logout-button sidebar-link">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Logout</span>
                </a>
            </div>
        </div>
    </aside>

    <main class="main-content">
        <header class="dashboard-header">
            <div class="header-left">
                <h3>Welcome to Hive</h3>
                <h1 class="dashboard-title">Dashboard</h1> <!-- Bold styling added -->
            </div>
            <div class="header-right">
                <input type="date" class="date-picker" id="datePicker">
                <i class="fa fa-bell notification-icon"></i>
            </div>
        </header>


        <div class="room-header">
            <p class="room-greeting">Hello There,</p>
            <h1 class="room-number">Room {{roomNumber}}</h1>
        </div>

        <section class="overview-preview-section">
            <div class="overview-preview-container">
                <!-- Utilities Overview Section -->
                <div class="utilities-overview">
                    <div class="overview-header">
                        <h2 class="utilities-title">Overview for Monthly Utilities Bills</h2>
                        <div class="date-card">
                            <p>Sept 2024 - Oct 2024 <span class="calendar-icon">ðŸ“…</span></p>
                        </div>
                    </div>
                    <div class="utilities-cards">
                        <div class="card card-large">
                            <div class="card-content">
                                <i class="fas fa-bolt"></i>
                                <h3>Electricity</h3>
                            </div>
                            <p>Php 2345.67</p>
                            <span class="status pending">Pending</span>
                        </div>
                        <div class="card card-medium">
                            <div class="card-content">
                                <i class="fas fa-tint"></i>
                                <h3>Water</h3>
                            </div>
                            <p>Php 345.67</p>
                            <span class="status paid">Paid</span>
                        </div>
                        <div class="card card-small">
                            <div class="card-content">
                                <i class="fas fa-wifi"></i>
                                <h3>WiFi/Internet</h3>
                            </div>
                            <p>Php 1500</p>
                            <span class="status overdue">Overdue</span>
                        </div>
                        <div class="card card-large">
                            <div class="card-content">
                                <i class="fas fa-home"></i>
                                <h3>Unit Rent</h3>
                            </div>
                            <p>Php 8000</p>
                        </div>
                        <div class="card card-medium">
                            <div class="card-content">
                                <i class="fas fa-tools"></i>
                                <h3>Maintenance Fees</h3>
                            </div>
                            <p>Php 300</p>
                        </div>
                        <div class="card card-medium dorm-amenities">
                            <div class="card-content">
                                <i class="fas fa-bed"></i>
                                <h3>Dorm Amenities</h3>
                            </div>
                            <p>Included</p>
                        </div>
                        <div class="card card-small">
                            <div class="card-content">
                                <i class="fas fa-calendar"></i>
                                <h3>Due Date</h3>
                            </div>
                            <p>October 15, 2024</p>
                        </div>
                    </div>
                </div>

                <!-- Preview Section -->
                <div class="preview-section white-card-background">
                    <h2 class="preview-title">Preview</h2>
                    <div class="preview-top">
                        <div class="preview-card tenant-card">
                            <i class="fas fa-users"></i>
                            <div class="card-info">
                                <h3>{{rentedSlot}}</h3>
                                <p>Tenants</p>
                            </div>
                        </div>
                        <div class="preview-card penalty-card">
                            <i class="fas fa-exclamation-triangle"></i>
                            <div class="card-info">
                                <h3>0</h3>
                                <p>Penalty</p>
                            </div>
                        </div>
                    </div>
                    <div class="preview-bottom">
                        <div class="preview-card announcement-card full-width">
                            <i class="fas fa-bell"></i>
                            <div class="card-info">
                                <h3>2</h3>
                                <p>New Announcement</p>
                            </div>
                        </div>
                        <div class="announcement-gradient-line"></div>
                    </div>
                </div>
            </div>
        </section>
    </main>
</div>

<script src="/js/tenantDashboard.js"></script>